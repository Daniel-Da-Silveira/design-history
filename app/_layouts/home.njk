{% extends "layouts/product.njk" %}

{% block head %}
  {{ super() }}
  <meta name="google-site-verification" content="JYBW4MAJKPKUxecfLzCNG897toSCmnNiUq7gTCjvsnQ" />
  <meta name="robots" content="noindex nofollow">
{% endblock %}

{% block content %}
  {{ content }}
  <h2 class="govuk-heading-l govuk-!-font-size-27">
    {{ sections.title or app.sections.title or "Sections" }}
  </h2>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% for item in collections.all | eleventyNavigation(options.homeKey) %}
        <section class="govuk-!-margin-bottom-6">
          <h3 class="govuk-heading-m govuk-!-margin-bottom-1">
            <a href="{{ item.url | url | pretty }}">{{ item.title }}</a>
          </h3>
          <p class="govuk-body">{{ item.excerpt }}</p>
        </section>
      {% endfor %}

    </div>

    {% if aside or related %}
      <div class="govuk-grid-column-one-third-from-desktop">
        {% include "layouts/shared/related.njk" %}
      </div>
    {% endif %}
  </div>

{% endblock %}